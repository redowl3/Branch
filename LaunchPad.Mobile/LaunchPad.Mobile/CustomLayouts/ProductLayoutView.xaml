<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="LaunchPad.Mobile.CustomLayouts.ProductLayoutView">
    <ContentView.Content>
        <Grid Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid ColumnDefinitions="*,2*">
                <forms:CachedImage Source="{Binding ImageUrl}" WidthRequest="150" HeightRequest="150" HorizontalOptions="Start"/>
                <Grid Grid.Column="1" HorizontalOptions="Start">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="56"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackLayout>
                            <Label Text="{Binding Product.Name}" FontSize="18" HorizontalTextAlignment="Start" TextColor="#000000"/>
                            <Label FontSize="14" Text="{Binding Product.Summary}" HorizontalTextAlignment="Start" TextColor="#000000"/>
                        </StackLayout>
                        <Image Grid.Column="1" Source="icon_doc" HorizontalOptions="End" VerticalOptions="Start" WidthRequest="46" HeightRequest="46"/>
                    </Grid>
                    <StackLayout Grid.Row="1" BindableLayout.ItemsSource="{Binding Product.Properties}" Orientation="Horizontal" VerticalOptions="End">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Grid VerticalOptions="End" Padding="0,5">
                                    <forms:CachedImage Source="{Binding ImageUrl}" VerticalOptions="End"/>
                                </Grid>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
                </Grid>
            </Grid>
            <StackLayout Grid.Row="1" BindableLayout.ItemsSource="{Binding Product.SkinConcerns}" Orientation="Horizontal" Spacing="10">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <StackLayout Orientation="Horizontal" Spacing="2">
                                <Image Source="icon_checkmark" WidthRequest="20" HeightRequest="20"/>
                                <Label FontSize="13" Text="{Binding .}" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" TextColor="#000000"/>
                            </StackLayout>
                        </Grid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
            <StackLayout Grid.Row="2" VerticalOptions="End">
                <FlexLayout BindableLayout.ItemsSource="{Binding AdditionalInformations}" AlignContent="SpaceEvenly" HorizontalOptions="Center">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <BoxView HeightRequest="2" VerticalOptions="End" BackgroundColor="Gray"/>
                                <Grid ColumnDefinitions="*" Padding="0,10">
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="benefits_close_clicked" NumberOfTapsRequired="1"/>
                                    </Grid.GestureRecognizers>
                                    <Label Text="{Binding AdditionalInformation.Title}" FontSize="16" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="#000000"/>
                                </Grid>
                                <BoxView HeightRequest="2" VerticalOptions="End" BackgroundColor="Gray"/>                                
                            </StackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>
                <Grid x:Name="DetailStack" IsVisible="False" BackgroundColor="Red">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Label Text="{Binding Detail}" FontSize="15" TextColor="#000000"/>
                </Grid>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>